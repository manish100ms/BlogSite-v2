<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<% posts.forEach(function(post){ %>
    <h1><%= post.title %></h1>
    <p>
        <% let postBody = post.body %>
        <% if(postBody.length > 50){ %>
            <%= postBody.substring(0, 100) + "..." %>
            <a href="/posts/<%= post.title %>">Read More</a>
        <% } else{ %>
            <%= postBody %>
        <% } %>
    </p>
<% }); %>

<%- include('partials/footer'); -%>
